    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^11.2.0",
    "axios": "^1.13.5",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.70.0",
    "decimal.js": "^10.6.0",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.4",
    "ioredis": "^5.9.3",
    "jsonwebtoken": "^9.0.3",
    "nanoid": "^5.1.6",
    "opossum": "^9.0.0",
    "p-retry": "^7.1.1",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
